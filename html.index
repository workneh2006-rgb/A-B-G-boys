<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A/G/S Boys | Private</title>
    <style>
        /* General Styling */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0f172a;
            color: #f8fafc;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }
        .container {
            width: 90%;
            max-width: 450px;
            background: #1e293b;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.5);
            text-align: center;
        }
        input {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border-radius: 8px;
            border: 1px solid #334155;
            background: #0f172a;
            color: white;
            box-sizing: border-box;
        }
        button {
            width: 100%;
            padding: 12px;
            background: #2563eb;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            margin-top: 10px;
        }
        button:hover { background: #1d4ed8; }
        .hidden { display: none; }
        
        /* Friend List Styling */
        .friend-card {
            background: #334155;
            padding: 15px;
            margin: 10px 0;
            border-radius: 10px;
            cursor: pointer;
            transition: 0.3s;
            border-left: 5px solid #22c55e;
        }
        .friend-card:hover { background: #475569; }
        
        .special-btn { background: #9333ea; margin-top: 20px; }
        .action-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 15px; }
        .id-badge { font-size: 0.8rem; color: #94a3b8; margin-bottom: 20px; }
        hr { border: 0; border-top: 1px solid #334155; margin: 20px 0; }
        ul { list-style: none; padding: 0; text-align: left; }
        a { color: #38bdf8; text-decoration: none; display: block; margin: 10px 0; }
    </style>
</head>
<body>

    <div id="login-screen" class="container">
        <h1>A/G/S Boys</h1>
        <p>Private Access Only</p>
        <input type="password" id="pass-input" placeholder="Enter Password">
        <button onclick="checkLogin()">Sign In</button>
    </div>

    <div id="main-screen" class="container hidden">
        <div class="id-badge" id="display-id"></div>
        <h2>Online Friends</h2>
        <div id="friends-container">
            <div class="friend-card" onclick="viewNumber('Admin')">Admin (Tap for No.)</div>
        </div>

        <div class="action-grid">
            <button onclick="addFriend()">+ Add Friend</button>
            <button onclick="addLink()">+ Add Link</button>
        </div>

        <button class="special-btn" onclick="openSpecial()">Special Page (Films)</button>
    </div>

    <div id="special-screen" class="container hidden">
        <button onclick="goBack()" style="width: auto; padding: 5px 15px; float: left; background: #64748b;">‚Üê Back</button>
        <div style="clear: both;"></div>
        <h2>Film Links</h2>
        <input type="text" id="film-search" placeholder="Search films..." onkeyup="searchFilms()">
        <div id="film-links">
            <a href="https://example.com/film1" target="_blank">üé¨ Sample Film Link 1</a>
        </div>
    </div>

    <script>
        const ACCESS_KEY = "faimse@123";
        let userSetId = "";

        // Login Logic
        function checkLogin() {
            const val = document.getElementById('pass-input').value;
            if(val === ACCESS_KEY) {
                // Generate ID if it's the first time
                if(!userSetId) {
                    userSetId = "USER-" + Math.floor(1000 + Math.random() * 9000);
                }
                document.getElementById('display-id').innerText = "Logged in as: " + userSetId;
                
                document.getElementById('login-screen').classList.add('hidden');
                document.getElementById('main-screen').classList.remove('hidden');
            } else {
                alert("Incorrect Password!");
            }
        }

        // View Number Logic
        function viewNumber(name) {
            const verify = prompt("Verify Password again to see number:");
            if(verify === ACCESS_KEY) {
                alert(name + "'s number is: +1234567890");
            } else {
                alert("Wrong Password.");
            }
        }

        // Add Friend / Link Logic
        function addFriend() {
            const name = prompt("Enter Friend's Name:");
            if(name) {
                const div = document.createElement('div');
                div.className = 'friend-card';
                div.innerText = name + " (Tap for No.)";
                div.onclick = () => viewNumber(name);
                document.getElementById('friends-container').appendChild(div);
            }
        }

        function addLink() {
            const title = prompt("Film Title:");
            const url = prompt("Paste URL:");
            if(title && url) {
                const a = document.createElement('a');
                a.href = url;
                a.target = "_blank";
                a.innerText = "üé¨ " + title;
                document.getElementById('film-links').appendChild(a);
                alert("Link added to Special Page!");
            }
        }

        // Navigation
        function openSpecial() {
            document.getElementById('main-screen').classList.add('hidden');
            document.getElementById('special-screen').classList.remove('hidden');
        }

        function goBack() {
            document.getElementById('special-screen').classList.add('hidden');
            document.getElementById('main-screen').classList.remove('hidden');
        }

        // Search Logic
        function searchFilms() {
            let filter = document.getElementById('film-search').value.toLowerCase();
            let links = document.getElementById('film-links').getElementsByTagName('a');
            for (let i = 0; i < links.length; i++) {
                let text = links[i].innerText.toLowerCase();
                links[i].style.display = text.includes(filter) ? "" : "none";
            }
        }
    </script>
</body>
</html>
